<Window x:Class="OpenKh.Tools.ModsManager.Views.RepositoryModWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenKh.Tools.ModsManager.Views"
        xmlns:converters="clr-namespace:OpenKh.Tools.ModsManager.Converters"
        mc:Ignorable="d"
        Title="Downloadable Mods" Height="600" Width="800" WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Xe.Tools.Wpf;component/Themes/Generic.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Xe.Tools.Wpf;component/Icons/VisualStudioIcons.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Xe.Tools.Wpf;component/Icons/RefreshIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:InvertBooleanConverter x:Key="InvertBooleanConverter" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:StringEmptyToVisibilityConverter x:Key="StringEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{Binding ColorTheme.BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Título de la sección -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Downloadable Mods" Margin="10,10,10,2" 
                   Foreground="{Binding ColorTheme.TextColor}" FontWeight="Bold"/>
        
        <!-- Instrucciones -->
        <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Text="Click on a mod to see its details" Margin="10,0,10,5" 
                 Foreground="{Binding ColorTheme.TextColor}" FontStyle="Italic" FontSize="11"/>

        <!-- Búsqueda de mods -->
        <Grid Grid.Row="2" Grid.Column="0" Margin="10,0,5,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Barra de búsqueda -->
            <Border Grid.Row="0" Background="{Binding ColorTheme.BackColor2}" BorderThickness="1" BorderBrush="#FFABADB3" Margin="0,0,0,5">
                <Grid>
                    <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0" Padding="3" Background="Transparent" 
                             Foreground="{Binding ColorTheme.TextColor}" BorderThickness="0"
                             VerticalContentAlignment="Center"
                             ToolTip="Search mods..."/>
                    <TextBlock Text="Search mods..." IsHitTestVisible="False" 
                             Margin="5,0,0,0" VerticalAlignment="Center" Foreground="Gray"
                             Visibility="{Binding SearchQuery, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>
                </Grid>
            </Border>
            
            <!-- Lista de mods disponibles -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Cabecera de la lista -->
                <Grid Grid.Row="0" Background="{Binding ColorTheme.BackgroundColor}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Center" Text="Available Mods" Foreground="{Binding ColorTheme.TextColor}" Padding="5"/>
                    <Button Grid.Column="1" Command="{Binding RefreshDownloadableModsCommand}" ToolTip="Refresh available mods" Padding="3,0" Margin="0,3,3,3">
                        <Image Source="{StaticResource Refresh_16x}"/>
                    </Button>
                    <Separator Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="0" Background="#FFABADB3"/>
                </Grid>
                
                <!-- Lista de mods -->
                <ListBox Grid.Row="1"
                    VerticalAlignment="Stretch"
                    ItemsSource="{Binding FilteredDownloadableModsList}"
                    SelectedValue="{Binding SelectedDownloadableMod}"
                    Foreground="{Binding ColorTheme.TextColor}"
                    Background="{Binding ColorTheme.BackColor2}"
                    HorizontalContentAlignment="Stretch">
                    <ListBox.Style>
                        <Style TargetType="ListBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoadingDownloadableMods}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.Style>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="64" Margin="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid Margin="3 1 10 0" Grid.Column="0" VerticalAlignment="Center">
                                    <Image Width="64" Height="64" Source="{Binding IconImage}"/>
                                </Grid>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="{Binding DataContext.ColorTheme.TextColor, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    <TextBlock Text="{Binding Author}" Foreground="{Binding DataContext.ColorTheme.TextColor, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    <TextBlock Text="{Binding Game}" Foreground="{Binding DataContext.ColorTheme.TextColor, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    <ProgressBar Height="5" Visibility="{Binding IsInstalling, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                 Value="{Binding InstallProgress}" Maximum="100" Width="150" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                </StackPanel>
                                <Grid Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,0,0">
                                    <Button Command="{Binding InstallCommand}" Padding="6,6" Width="28" Height="28"
                                            IsEnabled="{Binding IsInstalling, Converter={StaticResource InvertBooleanConverter}}" 
                                            ToolTip="Install mod">
                                        <Image Source="{StaticResource Add_16x}" Width="16" Height="16"/>
                                    </Button>
                                    <!-- Indicador de carga cuando está instalando -->
                                    <Border Width="28" Height="28" Background="#4C4C4C" 
                                            Visibility="{Binding IsInstalling, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="{Binding InstallProgress, StringFormat={}{0}%}" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                   FontSize="9" Foreground="White"/>
                                    </Border>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Indicador de carga para mods descargables -->
                <Grid Visibility="{Binding IsLoadingDownloadableModsVisibility}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Loading downloadable mods..." Foreground="{Binding ColorTheme.TextColor}" HorizontalAlignment="Center"/>
                        <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Grid.Row="2" Width="5" 
                      HorizontalAlignment="Center" VerticalAlignment="Stretch" 
                      Background="{Binding ColorTheme.BorderColor}"/>

        <!-- Detalles del mod -->
        <Grid Grid.Column="2" Grid.Row="2" Margin="5,0,10,10">
            <StackPanel Visibility="{Binding IsDownloadableModUnselectedMessageVisible}">
                <TextBlock Margin="0 0 0 3" Text="The selected downloadable mod info will be displayed here." 
                           TextWrapping="Wrap" Foreground="{Binding ColorTheme.TextColor}"/>
                <TextBlock Margin="0 0 0 3" TextWrapping="Wrap" Foreground="{Binding ColorTheme.TextColor}">
                    These are mods available for download that are compatible with your selected game.
                </TextBlock>
                <TextBlock Margin="0 0 0 3" TextWrapping="Wrap" Foreground="{Binding ColorTheme.TextColor}">
                    Select a mod to see more details and install it with a single click.
                </TextBlock>
            </StackPanel>
            <ScrollViewer Visibility="{Binding IsDownloadableModInfoVisible}">
                <local:DownloadableModDetailsView DataContext="{Binding SelectedDownloadableMod}"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
